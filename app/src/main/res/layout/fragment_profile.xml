<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profileFrag">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:background="@color/orange_brown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ll_profileFrag_topNav">
            <ImageButton
                android:id="@+id/ib_profile_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings"
                android:backgroundTint="@color/orange_brown"
                />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:layout_constraintTop_toBottomOf="@id/ll_profileFrag_topNav"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="48dp"
            android:layout_marginTop="10px"
            android:id="@+id/cv_profileFrag_profilePic">
            <ImageView
                android:id="@+id/iv_profileFrag_profilePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10px"
            android:textSize="48dp"
            android:textStyle="bold"
            android:textColor="@color/orange_brown"
            android:id="@+id/tv_profileFrag_username"
            app:layout_constraintTop_toBottomOf="@id/cv_profileFrag_profilePic"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profileFrag_username"
            app:cardCornerRadius="12dp"
            android:id="@+id/cv_profileFrag_1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/orange_brown"
                android:id="@+id/tv_profileFrag_1"
                android:padding="6dp"
                android:text="Ảnh của bạn"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/orange_brown"
            app:layout_constraintBottom_toBottomOf="@id/cv_profileFrag_1"
            />

        <GridView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/cv_profileFrag_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:numColumns="2"
            android:id="@+id/gv_profileFrag_listPics"/>

        <Button
            android:id="@+id/b_profileFrag_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:backgroundTint="@color/orange_brown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cv_profileFrag_1"
            app:layout_constraintBottom_toBottomOf="@id/cv_profileFrag_1"
            android:textSize="24dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>