<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profileFrag"
    android:id="@+id/fl_profileFrag">
    <ProgressBar
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/pb_profileFrag"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cl_profileFrag_profile"
        android:visibility="visible">
        <ProgressBar
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:visibility="gone"
            android:id="@+id/pb_profileFrag_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sv_profileFrag_profile"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:background="@color/orange_brown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ll_profileFrag_topNav">
            <ImageButton
                android:id="@+id/ib_profile_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings"
                android:backgroundTint="@color/orange_brown"
                />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/sv_profileFrag_profile"
            app:layout_constraintTop_toBottomOf="@id/ll_profileFrag_topNav">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="48dp"
                    android:layout_marginTop="6dp"
                    android:id="@+id/cv_profileFrag_profilePic">
                    <ImageView
                        android:id="@+id/iv_profileFrag_profilePic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/user"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10px"
                    android:textSize="36dp"
                    android:textStyle="bold"
                    android:text="username"
                    android:textColor="@color/orange_brown"
                    android:id="@+id/tv_profileFrag_username"
                    app:layout_constraintTop_toBottomOf="@id/cv_profileFrag_profilePic"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10px"
                    android:textSize="18dp"
                    android:textColor="@color/orange_brown"
                    android:text="email"
                    android:id="@+id/tv_profileFrag_email"
                    app:layout_constraintTop_toBottomOf="@id/tv_profileFrag_username"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_profileFrag_email"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="follower &amp; follow"
                    android:textSize="12dp"
                    android:textColor="@color/orange_brown"
                    android:id="@+id/tv_profileFrag_follower_follow"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profileFrag_follower_follow"
                    app:cardCornerRadius="12dp"
                    android:backgroundTint="@color/orange_brown"
                    android:id="@+id/cv_profileFrag_1"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/tv_profileFrag_1"
                        android:padding="6dp"
                        android:text="Ảnh của bạn"
                        />
                </androidx.cardview.widget.CardView>
                <Button
                    android:id="@+id/b_profileFrag_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:backgroundTint="@color/orange_brown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/cv_profileFrag_1"
                    app:layout_constraintBottom_toBottomOf="@id/cv_profileFrag_1"
                    android:textSize="24dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/orange_brown"
                    app:layout_constraintBottom_toBottomOf="@id/cv_profileFrag_1"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cl_profileFrag_listPics"
                    app:layout_constraintTop_toBottomOf="@id/cv_profileFrag_1"
                    >
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:layout_constraintTop_toBottomOf="@id/cl_profileFrag_listPics"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cl_profileFrag_viewPic"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="48dp"
            android:id="@+id/cv_profileFrag_vP_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="6dp"
            android:alpha="0.5"
            android:layout_margin="6dp">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                android:backgroundTint="@color/orange_brown"
                android:id="@+id/fab_profileFrag_vP_back"/>
        </androidx.cardview.widget.CardView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/baseline_more_horiz_24"
            app:maxImageSize="48dp"
            android:backgroundTint="@color/orange_brown"
            android:alpha="0.5"
            android:id="@+id/fab_profileFrag_vP_more"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:id="@+id/cv_profileFrag_vP_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="64dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:id="@+id/iv_profileFrag_vP_img"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="48dp"
                    android:layout_margin="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_profileFrag_vP_img"
                    android:id="@+id/cv_profileFrag_vP_profilePic">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:id="@+id/iv_profileFrag_vP_profilePic"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginStart="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/cv_profileFrag_vP_profilePic"
                    app:layout_constraintTop_toTopOf="@id/cv_profileFrag_vP_profilePic"
                    app:layout_constraintBottom_toBottomOf="@id/cv_profileFrag_vP_profilePic"
                    android:textStyle="bold"
                    android:textColor="@color/orange_brown"
                    android:textSize="24dp"
                    android:text="user"
                    android:id="@+id/tv_profileFrag_vP_username"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/cv_profileFrag_vP_profilePic"
                    app:layout_constraintTop_toBottomOf="@id/cv_profileFrag_vP_profilePic"
                    android:layout_marginTop="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/orange_brown"
                    android:textSize="30dp"
                    android:id="@+id/tv_profileFrag_vP_namePic"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/cv_profileFrag_vP_profilePic"
                    app:layout_constraintTop_toBottomOf="@id/tv_profileFrag_vP_namePic"
                    android:layout_marginTop="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/orange_brown"
                    android:textSize="30dp"
                    android:id="@+id/tv_profileFrag_vP_tagsPic"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>