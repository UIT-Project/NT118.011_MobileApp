<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_login"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tv_login_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ĐĂNG NHẬP"
        android:textStyle="bold"
        android:textSize="40dp"
        />
    <TextView
        android:id="@+id/tv_login_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login_1"
        android:text="Đăng nhập cùng lướt SUrPic thôi nào!"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#A4A5B4"
        />
    <TextView
        android:id="@+id/tv_login_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login_2"
        android:text="Email"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/et_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_login_email"
        app:layout_constraintTop_toBottomOf="@id/tv_login_email"
        android:layout_marginLeft="20dp"
        android:hint="Nhập email đã đăng ký"
        />

    <TextView
        android:id="@+id/tv_login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login_email"
        android:text="Mật khẩu"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_login_password"
        app:layout_constraintTop_toBottomOf="@id/tv_login_password"
        app:layout_constraintEnd_toStartOf="@id/iv_login_password"
        android:layout_marginLeft="20dp"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword"
        />
    <ImageView
        android:id="@+id/iv_login_password"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/eye_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login_password" />

    <Button
        android:id="@+id/b_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login_password"
        android:layout_marginTop="50dp"
        android:text="Đăng Nhập"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#A04A0F"
        />
    <TextView
        android:id="@+id/tv_login_forgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu?"
        app:layout_constraintStart_toStartOf="@id/b_login"
        app:layout_constraintTop_toBottomOf="@id/b_login"
        app:layout_constraintEnd_toEndOf="@id/b_login"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_login_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chưa có tài khoản?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login_forgotPass"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/tv_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký ngay"
        app:layout_constraintStart_toEndOf="@id/tv_login_3"
        app:layout_constraintTop_toBottomOf="@id/tv_login_forgotPass"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:textColor="#A04A0F"
        android:textStyle="bold"
        />
</androidx.constraintlayout.widget.ConstraintLayout>