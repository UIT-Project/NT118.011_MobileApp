<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".searchFrag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cl_searchFrag_top">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_searchFrag_cancel"
            android:id="@+id/cv_searchFrag_searchBox"
            app:cardCornerRadius="18dp"
            android:backgroundTint="@color/gray"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_marginStart="6dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search_icon"
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_searchFrag_icon"
                android:scaleType="fitXY"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập từ khóa tìm kiếm"
                android:layout_marginStart="36dp"
                android:textSize="18dp"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:textColor="@color/white"
                android:id="@+id/et_searchFrag_searchBox"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/cv_searchFrag_searchBox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tv_searchFrag_cancel"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="@id/cv_searchFrag_searchBox"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            android:id="@+id/cv_searchFrag_byPic"
            app:layout_constraintTop_toBottomOf="@id/cv_searchFrag_searchBox"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="@color/orange_brown"
            app:layout_constraintEnd_toStartOf="@id/cv_searchFrag_byAcc"
            android:layout_marginTop="6dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hình ảnh"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:id="@+id/tv_searchFrag_byPic"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            android:id="@+id/cv_searchFrag_byAcc"
            app:layout_constraintTop_toBottomOf="@id/cv_searchFrag_searchBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_searchFrag_byPic"
            android:backgroundTint="@color/white"
            android:layout_marginTop="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/orange_brown"
                android:id="@+id/tv_searchFrag_byAcc"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/cv_searchFrag_byPic"
            android:id="@+id/sv_searchFrag"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cl_searchFrag_listPics"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/dummy"
                    app:layout_constraintTop_toBottomOf="@id/cl_searchFrag_listPics"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <ProgressBar
            android:layout_width="128dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/sv_searchFrag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/pb_searchFrag"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="*Không tìm thấy kết quả nào"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/cv_searchFrag_byPic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            android:id="@+id/tv_searchFrag_noRes"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>