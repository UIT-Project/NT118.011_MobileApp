<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".updateUser">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;"
        android:backgroundTint="@color/orange_brown"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/b_updateUser_back"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:text="Sửa thông tin tài khoản"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/orange_brown"
        app:layout_constraintTop_toBottomOf="@id/b_updateUser_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:id="@+id/tv_updatePass_1"/>

    <androidx.cardview.widget.CardView
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintTop_toBottomOf="@id/tv_updatePass_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="48dp"
        android:layout_marginTop="12dp"
        android:id="@+id/cv_updateUser_pic">
        <ImageView
            android:id="@+id/iv_updateUser_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/user"/>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thay ảnh đại diện"
        android:backgroundTint="@color/orange_brown"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_updateUser_pic"
        android:id="@+id/b_updateUser_changePic"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="Username: "
        android:textColor="@color/orange_brown"
        android:id="@+id/tv_updateUser_username"
        app:layout_constraintTop_toBottomOf="@id/b_updateUser_changePic"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:id="@+id/et_updateUser_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_updateUser_username"
        app:layout_constraintTop_toTopOf="@id/tv_updateUser_username"
        app:layout_constraintBottom_toBottomOf="@id/tv_updateUser_username"
        android:imeOptions="actionGo"
        android:inputType="text"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:backgroundTint="@color/orange_brown"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_updateUser_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="128dp"
        android:id="@+id/b_updateUser_update"
        />

</androidx.constraintlayout.widget.ConstraintLayout>