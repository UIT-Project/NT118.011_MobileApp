<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".uploadImg">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_brown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cl_updateImg_top">
        <Button
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:textStyle="bold"
            android:textSize="24dp"
            android:backgroundTint="@color/orange_brown"
            android:id="@+id/b_updateImg_back"/>
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa ảnh"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_updateImg_top">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/cv_updateImg"
                android:layout_marginTop="12dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:id="@+id/iv_updateImg"
                    android:src="@drawable/user"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cv_updateImg"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Tên ảnh"
                android:textSize="24dp"
                android:layout_marginTop="12dp"
                android:id="@+id/tv_updateImg_name"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                app:layout_constraintTop_toBottomOf="@id/tv_updateImg_name"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold"
                android:hint="Tên mới cho ảnh"
                android:id="@+id/et_updateImg_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/et_updateImg_name"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Tags"
                android:textSize="24dp"
                android:layout_marginTop="12dp"
                android:id="@+id/tv_updateImg_tags"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                app:layout_constraintTop_toBottomOf="@id/tv_updateImg_tags"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold"
                android:hint="Thêm các tag mô tả ảnh"
                android:id="@+id/et_updateImg_tags"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Các tag được phải được phân tách bởi khoảng trắng &quot; &quot; và chỉ được chứa các kí tự sau: [a-z], [0-9] và dấu gạch dưới &quot;_&quot;"
                app:layout_constraintTop_toBottomOf="@id/et_updateImg_tags"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18dp"
                android:textColor="@color/red"
                android:layout_marginBottom="128dp"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/baseline_delete_24"
                android:backgroundTint="@color/red"
                android:scaleType="fitXY"
                android:id="@+id/ib_updateImg_delete"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu"
                android:backgroundTint="@color/orange_brown"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/b_updateImg_update"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>